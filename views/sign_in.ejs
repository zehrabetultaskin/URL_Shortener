<!DOCTYPE html>
<html>
<head>
	<title>Kayıt Ol</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js">
	</script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	<link rel="stylesheet" href="./css/main.css">
	<style>
		.location{
			padding: 30px;
  			border: 1px solid rgba(255, 255, 255, .4);
			background: rgba(255, 255, 255, .3);
			border-radius: 5px;
			margin-top: 150px;
			padding: 15px 30px 20px;
			
		}
		.background{
			background: linear-gradient(rgb(0, 42, 255), rgb(207, 87, 255));
			background-position: center;
  			background-repeat: no-repeat;
  			background-size: cover;
			background-attachment: fixed;
		}
		.header{
			color: white;
			font-size: 35px;
			background: rgba(255, 255, 255, .0);
		}
		.button{
			background-color:rgb(110, 70, 212);
			font-size: 18px;
			padding: 10px 30px 10px 30px;
			border-color:rgb(110, 70, 212);
			color: white;
		}


	</style>

	<script type="text/javascript">
		$(document).ready(function(){

			$( "#form1" ).submit(function(event) {
				event.preventDefault();

				$.ajax({
					type: 'POST',
					url: '/sign_in',
					data: $('#form1').serialize(),
					dataType: "json",
					success: function(response){
						//alert("a");
						//console.log(response.Success);
						$('#form1')[0].reset();

						document.getElementById("check").innerHTML=response.Success;
         					//ADD THIS CODE
         					setTimeout(function(){
         						document.getElementById("check").innerHTML="";
         					},5000);
         					if (response.Success=="You are regestered,You can login now.") {
         						document.getElementById("aa").click();
         					};
         				},
         				error: function() {
         				}
         			})
			});
		});
	</script>
</head>
<body class="background">

	<div class="col-md-4 col-md-offset-4 location">
		<div>
			<p class="header">Kayıt Ol
			</p>
		</div>
		<div class="form-group">
			<form id="form1" method="post">
				<input type="email" name="email" placeholder="Mail" required="" class="form-control"><br/>
				<input type="text" name="username" placeholder="Kullanıcı Adı" required="" class="form-control"><br/>
				<input type="password" name="password" placeholder="Şifre" required="" class="form-control"><br/>
				<input type="password" name="passwordConf" placeholder="Şifre Doğrulama" required="" class="form-control"><br/>
				<input type="submit" value="Kayıt Ol" class="button">
			</form>
		</div>
		
		<div class="mssg bg-danger">
			<span id="check"></span>
		</div>
		<div>
			<span>Zaten Kaydoldum! <a href="/login" style="color:white;">Giriş Yap</a></span>
		</div>
		<div id="LangTable"><a href="/login" id="aa"></a>
		</div>
	</div>
</body>
</html>